      <setting id="channel_name_first" type="bool" label="Live-TV: Sendername zuerst anzeigen?" default="true" />
      <setting id="enable_extended_mediainfos" type="bool" label="Anzeige von zusÃ¤tzlichen Medieninformationen" default="false" />
